<%= simple_form_for [@native_target, @build_rule] do |form| %>
  <%= form.input :provisioning_profile_id, :collection => ProvisioningProfile.all, :include_blank => false %>
  <% if @native_target %>
    <%= form.input :build_configuration_id, :collection => @native_target.build_configurations, :include_blank => false  %>
  <% else %>
    <%= form.input :build_configuration_id, :collection => NativeTarget.application_type.all, :group_method => :build_configurations, :as => :grouped_select %>
  <% end %>
  <%= form.submit :class => 'btn btn-primary' %>
<% end %>
