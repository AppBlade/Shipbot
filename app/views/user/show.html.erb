<% content_for :title do %>
  <%= current_user %>
<% end %>
  <h5><%= current_user.email %></h5>
  <p>User since <%= time_since current_user.created_at %> <i>(all time is in UTC)</i></p> <%= link_to 'Logout', '/logout', :class=>'btn btn-danger pull-right' %>
<br/>
<table class="table table-striped table-bordered" style="min-width: 940px;">
  <h4>Access Keys</h4>
  <tr>
    <th>Provider</th>
    <th>Token</th>
    <th>Last Seen</th>
    <th>Status</th>
    <th colspan="2">Actions</th>
  </tr>

<%= render :partial => "access_key", :collection => @access_keys %>
</table>

<%= link_to '+ New Access Key', '/users', :class=>'btn btn-success' %>

<%= link_to 'Delete My Account', delete_user_path(:confirm_id=>current_user.id), :confirm=>"Are you sure you want to delete your account? This isn't reversible!", :class=>'btn btn-danger pull-right', :style=>"margin-top:3em;" %>
