<!DOCTYPE html>
<html>
<head>
  <title><% if content_for? :title %><%= yield :title %> | <% end %>Shipbot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="/"><%= image_tag 'anchor-nav.png', class: 'anchor' %><%= image_tag 'shipbot-nav.png' %> Shipbot</a>
        <ul class="nav">
          <%= navigation_link 'Repositories', :repositories %>
          <%= navigation_link 'Projects', :xcode_projects %>
          <%= navigation_link 'Certificates', :developer_certificates %>
          <%= navigation_link 'Provisioning', :provisioning_profiles %>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row-fluid">
      <div class="span12">
        <% if content_for? :title %>
          <h2><%= yield :title %></h2>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>

  <footer class="footer">
    <div class="container">
      <%= image_tag 'watermark.png', class: 'watermark' %>
    </div>
  </footer>

  <%= render 'shared/go_squared' %>

</body>
</html>
