<% content_for :title do %>
  Projects
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th>Project</th>
    <th>Target</th>
    <th>Branches</th>
    <th>Rules</th>
  </tr>
<% if  @xcode_projects.any? %>
  <%= render @xcode_projects %>
<% else %>
  <tr>
    <td colspan="4">You don't have any projects yet. Start configuring your projects in the <%= link_to "Repositories tab", :repositories %>.</td>
  </tr>
<% end %>
 
</table>

<%= link_to [:new, :build_rule], :class => 'btn btn-success btn-large' do %>
  <i class="icon-plus"></i> New build rule
<% end %>
